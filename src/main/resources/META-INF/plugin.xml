<idea-plugin>
    <id>com.lucas.LangTransExcel</id>
    <name>LangResExport</name>
    <vendor email="lucas_developer@163.com" url="https://github.com/LucasDevelop">Lucas</vendor>

    <description><![CDATA[
    An Android project language resources can be extracted and exported to Excel spreadsheet plug-in<br>
    <em>Once installed, click Tools->Android Lang Transform Excel to run the plugin</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
<!--    支持xml文件操作-->
    <depends>com.intellij.modules.xml</depends>
<!--    AS相关-->
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="config" class="com.lucas.lang.ui.InitConfig" text="Android Lang Transform Excel" description="Android Lang Transform Excel">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>